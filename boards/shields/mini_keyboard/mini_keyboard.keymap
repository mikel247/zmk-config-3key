#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>

/ {
    combos {
        compatible = "zmk,combos";
        combo_layer_toggle {
            timeout-ms = <100>;
            key-positions = <1 2>; 
            bindings = <&tog 1>;
        };
    };

    behaviors {
        // Simple hold-tap: Hold for Studio Unlock, Tap for Vol Down
        vol_dn_studio: vol_dn_studio {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <0>;
            flavor = "tap-preferred";
            tapping-term-ms = <250>;
            bindings = <&studio_unlock>, <&kp C_VOL_DN>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
                &kp C_VOL_UP &kp C_PP &vol_dn_studio
            >;
        };

        bt_layer {
            bindings = <
                &bt BT_CLR &bt BT_SEL 0 &bt BT_SEL 1
            >;
        };
    };
};
